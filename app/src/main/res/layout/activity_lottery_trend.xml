<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cjkj.jcb_caiyou.ui.is_native.lottery.SSQ.LotteryTrendActivity">

    <include layout="@layout/toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_wh"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="@dimen/item_wh"
            android:gravity="center"
            android:text="期号"
            android:textSize="16sp"
             />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_wh"
            android:background="#dad2ca"
            android:orientation="horizontal">

            <com.cjkj.jcb_caiyou.widget.lotterytrend.HeaderHorizontalScrollView
                android:id="@+id/trend_header_scroll"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_wh"
                android:scrollbars="none"
                android:fillViewport="false">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.cjkj.jcb_caiyou.widget.lotterytrend.HeadCustomGridView
                        android:id="@+id/grid_trend_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </com.cjkj.jcb_caiyou.widget.lotterytrend.HeaderHorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <com.cjkj.jcb_caiyou.widget.lotterytrend.LeftNumberSynchScrollView
                android:id="@+id/scroll_left"
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <com.cjkj.jcb_caiyou.widget.lotterytrend.LeftNumberCustomListView
                        android:id="@+id/lv_number"
                        android:layout_width="80dp"
                        android:layout_height="fill_parent" />
                </LinearLayout>
            </com.cjkj.jcb_caiyou.widget.lotterytrend.LeftNumberSynchScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:orientation="horizontal">

            <com.cjkj.jcb_caiyou.widget.lotterytrend.TrendScrollViewWidget
                android:id="@+id/scroll_content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="none">

                <com.cjkj.jcb_caiyou.widget.lotterytrend.TrendView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </com.cjkj.jcb_caiyou.widget.lotterytrend.TrendScrollViewWidget>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_weight="0.5"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="预选区:"
            android:textSize="16sp"
             />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.cjkj.jcb_caiyou.widget.lotterytrend.HeaderHorizontalScrollView
                android:id="@+id/trend_footer_scroll"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_wh"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <GridView
                        android:id="@+id/grid_trend_footer"
                        android:listSelector="#00000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </com.cjkj.jcb_caiyou.widget.lotterytrend.HeaderHorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="@dimen/item_wh"
            android:gravity="center"
            android:text="已选区"
            android:textSize="16sp"
             />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_wh">
            <TextView
                android:id="@+id/tv_result"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_wh" />
            <TextView
                android:id="@+id/iv_trend_yes"
                android:layout_width="wrap_content"
                android:layout_height="30.66666666666667dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:text="完成"
                android:textColor="@color/white"
                android:background="@color/red_liget"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                 />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
